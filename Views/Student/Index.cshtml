@model IEnumerable<T_System_Working_With_Model.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.percentage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.percentage)
            </td>
            <td>
                @Html.ActionLink("Edit 1","Edit",new{rollNo=item.rollNo})
                <a asp-action="Edit" asp-route-id="@item.rollNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.rollNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.rollNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
